
<h1>Listing Lists</h1>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Dead line</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><%= list.description %></td>
      <td><%= list.duration %></td>
      <td><%= list.dead_line_list(list.dead_line) %></td>
      <td><%= list.user.email %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'ad a task', new_list_task_path(:list_id => list.id) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <%if list.tasks.count> 0%>
    <%list.tasks.each do |task|%>
    <%color = task.due_date.future? ? "success" : "danger"%>
    <tr class=<%="#{color}"%>>
      <td></td>
      <td><%= task.name %></td>
      <td><%= task.comment %></td>
      <td><%= task.duration %></td>
      <td class="pull-right"><%= task.dead_line(task.due_date) %></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New List', new_list_path %>
